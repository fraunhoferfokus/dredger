<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ .Title }} - AsyncAPI</title>
  <style>
    body { font-family: sans-serif; margin: 2rem; line-height: 1.5; }
    h1 small { font-size: 0.6em; color: #555; }
    section { margin-bottom: 2rem; }
    table { width: 100%; border-collapse: collapse; margin-bottom: 1rem; }
    th, td { border: 1px solid #ccc; padding: 0.5rem; text-align: left; }
    th { background: #f0f0f0; }
    pre { background: #f7f7f7; padding: 0.5rem; }
  </style>
</head>
<body>
<h1>{{ .Title }} <small>v{{ .Version }}</small></h1>
{{ if .Description }}<p>{{ .Description }}</p>{{ end }}
{{ if .ContactName }}<p><strong>Contact:</strong> {{ .ContactName }}{{ if .ContactEmail }} (<a href="mailto:{{ .ContactEmail }}">{{ .ContactEmail }}</a>){{ end }}{{ if .ContactURL }} - <a href="{{ .ContactURL }}">{{ .ContactURL }}</a>{{ end }}</p>{{ end }}
{{ if .LicenseName }}<p><strong>License:</strong> {{ .LicenseName }}</p>{{ end }}

{{ if .Servers }}
<section>
  <h2>Servers</h2>
  <table>
    <tr><th>Name</th><th>Protocol</th><th>Host</th><th>Description</th></tr>
    {{ range .Servers }}<tr><td>{{ .Name }}</td><td>{{ .Protocol }}</td><td>{{ .Host }}</td><td>{{ .Description }}</td></tr>{{ end }}
  </table>
</section>
{{ end }}

{{ if .Channels }}
<section>
  <h2>Channels</h2>
  <table>
    <tr><th>Name</th><th>Address</th><th>Description</th><th>Messages</th></tr>
    {{ range .Channels }}
      <tr>
        <td>{{ .Name }}</td>
        <td>{{ .Address }}</td>
        <td>{{ .Summary }}</td>
        <td><ul>{{ range .Messages }}<li>{{ . }}</li>{{ end }}</ul></td>
      </tr>
    {{ end }}
  </table>
</section>
{{ end }}

{{ if .Operations }}
<section>
  <h2>Operations</h2>
  <table>
    <tr><th>Name</th><th>Action</th><th>Channel</th><th>Description</th><th>Messages</th></tr>
    {{ range .Operations }}
      <tr>
        <td>{{ .Name }}</td>
        <td>{{ .Action }}</td>
        <td>{{ .Channel }}</td>
        <td>{{ .Summary }}</td>
        <td><ul>{{ range .Messages }}<li>{{ . }}</li>{{ end }}</ul></td>
      </tr>
    {{ end }}
  </table>
</section>
{{ end }}

{{ if .Messages }}
<section>
  <h2>Messages</h2>
  {{ range .Messages }}
    <h3 id="{{ .Name }}">{{ .Name }}</h3>
    {{ if .Title }}<p><em>{{ .Title }}</em></p>{{ end }}
    {{ if .Summary }}<p>{{ .Summary }}</p>{{ end }}
    {{ if .ContentType }}<p>Content type: <code>{{ .ContentType }}</code></p>{{ end }}
    {{ if .Properties }}
      <table>
        <tr><th>Property</th><th>Type</th></tr>
        {{ range .Properties }}<tr><td>{{ .Name }}</td><td>{{ .Type }}</td></tr>{{ end }}
      </table>
    {{ end }}
  {{ end }}
</section>
{{ end }}
</body>
</html>
