package server

import (
	"{{.ModuleName}}/entities"
	"encoding/json"
	"log"

	"github.com/gorilla/websocket"
	"github.com/nats-io/nats.go"
)

{{- range .Operations }}
func {{.OperationName}}(nc *nats.Conn, ws *websocket.Conn) *nats.Subscription {

	// Subscribe to "{{.MessageName}}"
	Sub, err := nc.Subscribe("{{.MessageName}}", func(msg *nats.Msg) {
		env := entities.Envelope{
			Type: "{{.MessageName}}",
			Data: msg.Data,
		}
		out, err := json.Marshal(env)
		if err != nil {
			log.Println("Error marshaling {{.MessageName}} envelope:", err)
			return
		}
		if writeErr := ws.WriteMessage(websocket.TextMessage, out); writeErr != nil {
			log.Println("Error writing humidity to WebSocket:", writeErr)
		}
	})
	if err != nil {
		log.Println("NATS subscribe to {{.MessageName}} failed:", err)
		return nil
	}

	return Sub
}
{{ end }}