{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Beispiel",
    "type": "object",
    "properties": {
        "asyncapi": {
            "type": "string"
        },
        "info":{
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "description": {
                    "type": "string" 
                }
            },
            "required": ["title","version"]
        }
        
    },
    "required": ["asyncapi","info"]
}